<%- include('./partials/header')%>
<%- include('./partials/nav')%>
<div class="main-container">
    <div class="reg-page flex">
        <div class="reg-form">
            <%if(userData.signupError){%> <p class="error-message"><%=userData.errorMessage%></p><%}%>
            <%if(!userData.signupError){%>
            <form class="signup-user flex" action="/reg/signup" method="post">
                <input class="input-el" type="text"name="firstName" placeholder="First Name *" required>
                <input class="input-el" type="text"name="lastName" placeholder="Last Name (optional)" >
                <input class="input-el" type="email" name="email" id="" placeholder="Email *" required>
                <div class="flex passwords">
                    <input class="input-el" type="password" name="password" id="" placeholder="Password *" required>
                    <input class="input-el" type="password" name="confirmPassword" id="" placeholder="Confirm Password *" required>
                </div>
                <input class="input-el" type="tel" name="phone" id="" placeholder="Phone Number (optional)" >
                <input class="input-el" type="submit" value="Create Account">
            </form>
            <%}else{%>
               
                <form class="signup-user flex" action="/reg/signup" method="post">
                    <input class="input-el" type="text"name="firstName" value="<%=userData.firstName%>" required>
                    <%if(userData.lastName.length>0){%>
                        <input class="input-el" type="text"name="lastName" value="<%=userData.lastName%>">
                    <%}else{%>
                        <input class="input-el" type="text"name="lastName" placeholder="Last Name (optional)" >
                    <%}%>
                    <input class="input-el" type="email" name="email" id="" value="<%=userData.email%>" required>
                    <div class="flex passwords">
                        <input class="input-el" type="password" name="password" id="" value="<%=userData.password%>" required>
                        <input class="input-el" type="password" name="confirmPassword" id="" value="<%=userData.confirmPassword%>" required>
                    </div>
                    <%if(userData.phone.length>0){%>
                        <input class="input-el" type="tel" name="phone" id="" value="<%=userData.phone%>">
                    <%}else{%>
                        <input class="input-el" type="tel" name="phone" id="" placeholder="Phone Number (optional)" >
                    <%}%>
                    <input class="input-el" type="submit" value="Create Account">
                </form>
                
            <%}%>
        </div>
        <div class="reg-form">
            <%if(userData.success){%> <h3 class="success-message">Registration Sucessful. You can now Login</h3> <%}%>
            <%if(userData.loginError){%> <p class="error-message"><%=userData.errorMessage%></p><%}%>
            <%if(userData.loginError){%>
                <form class="login-user flex" action="/reg/login" method="post">
                    <input class="input-el" type="email" name="email" id="" value="<%=userData.loginEmail%>" required>
                    <input class="input-el" type="password" name="password" id="" value="<%=userData.loginPassword%>" required>
                    <input class="input-el" type="submit" value="Log In">
                </form>
            <%}else{%>
                <form class="login-user flex" action="/reg/login" method="post">
                    <input class="input-el" type="email" name="email" id="" placeholder="Your Email *" required>
                    <input class="input-el" type="password" name="password" id="" placeholder="Password *" required>
                    <input class="input-el" type="submit" value="Log In">
                </form>
            <%}%>
        </div>
    </div>
</div>


<%- include('./partials/footer')%>