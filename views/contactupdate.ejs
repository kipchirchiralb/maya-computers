<%- include('./partials/header')%>
<%- include('./partials/nav')%>
<div class="main-container customer-page">
    
    <div class="customer-nav customer-grid-item">
        <a  href="/customer/account/<%=locals.userId%>">
            Account
        </a>
        <a  href="/customer/cart/<%=locals.userId%>">
            Cart
        </a>
        <a href="/customer/orders/<%=locals.userId%>">
            Orders
        </a>
        <a href="/customer/history/<%=locals.userId%>">
            Purchase History
        </a>
        <a class="active" href="/customer/messages/<%=locals.userId%>">
            Messages
        </a>
        <a href="/customer/reviews/<%=locals.userId%>">
            Reviews
        </a>
    </div>
    <div class="customer-contact customer-grid-item">
        <div class="heading">Update contact details here</div>
        <div class="check-body" style="padding:40px;">
            <form class="reg-form" action="/contact/update" method="post">
                <input class="input-el" style="margin:20px 0" type="email" name="email" value="<%=user.email%>"> <br>
                <input class="input-el" style="margin:20px 0" type="number" name="phone" id="" value="<%=user.phone%>" placeholder="Phone number 245..."> <br>
                <input type="submit" style="margin:20px 0" value="UPDATE" class="sec-btn">
            </form>
        </div>
    </div>
    
</div>

<%- include('./partials/footer')%>