<%- include('./partials/header')%>
<%- include('./partials/nav')%>
<div class="main-container customer-page">
    
    <div class="customer-nav customer-grid-item hide-for-mobile">
        <a class="active" href="/customer/account/<%=locals.userId%>">
            Account
        </a>
        <a  href="/customer/cart/<%=locals.userId%>">
            Cart
        </a>
        <a href="/customer/orders/<%=locals.userId%>">
            Orders
        </a>
        <a href="/customer/orders/<%=locals.userId%>">
            Purchase History
        </a>
        <a href="/customer/orders/<%=locals.userId%>">
            Messages
        </a>
        <a href="/customer/orders/<%=locals.userId%>">
            Reviews
        </a>

    </div>
    <div class="customer-account customer-grid-item">
        <div class="heading">Account Details</div>
        <div class="content-grid">
            <div class="content-card">
                <div class="heading"><span>Contact</span> <a href="/contact/update"><img src="/images/icons/edit.svg" alt=""></a></div>
                <div class="card-body">
                    <p><%=user.firstName%>&nbsp;<%=user.lastName%></p>
                    <p><%=user.email%></p>
                    <p><%=user.phone%></p>
                </div>
            </div>
            <div class="content-card">
                <div class="heading"><span>Address</span> <a href="/adress/form"><img src="/images/icons/edit.svg" alt=""></a></div>
                <div class="card-body">
                    <%if(address.length>0){%>
                    <p>County: <%=address[0].county%></p>
                    <p>Town: <%=address[0].town%></p>
                    <p><%=address[0].additional%></p>
                    <%}else{%>
                        <p>N/A</p>
                        <p>N/A</p>
                        <p>N/A</p>
                    <%}%>
                </div>
            </div>
            <div class="content-card">
                <div class="heading"><span>Loyalty Points</span><span class="pri-btn">Redeem</span></div>
                <div class="card-body">
                    <p>You have: 1200 Points</p>
                    <p>Points are redeemable for Coupons</p>
                    <p>1000Points- 200KSH worth of Coupon</p>
                </div>
            </div>
            <div class="content-card">
                <div class="heading"><span>Coupons</span></div>
                <div class="card-body">
                    <p>You can only apply a coupon once per order</p>
                    <p>XMASS - Christmass </p>
                    <p>BLCKAF - Black Friday</p>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('./partials/footer')%>